rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Fornecedores logos - Only authenticated users can upload/read their own logos
    match /fornecedores_logos/{imageId} {
      allow read, write: if isAuthenticated();
      allow delete: if isAuthenticated() && isOwner(resource.metadata.userId);
    }

    // Other storage paths - only authenticated users
    match /{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
  }
}